<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="HabitatApp.Views.Pages.TabbedNavigationPage" 
	ItemsSource="{Binding MenuItems}" 
	xmlns:page="clr-namespace:HabitatApp.Views.Pages;assembly=HabitatApp">
	<TabbedPage.ItemTemplate>
		<DataTemplate>
	    	<page:CustomNavigationPage
	    		BackgroundColor = "{DynamicResource HabitatBackgroundColor}" 
	    		BarBackgroundColor="{StaticResource HabitatBackgroundColor}" 
	    		BarTextColor="{StaticResource HabitatMenuColor}" 
	    		Icon="Habitat.png" >

				    <ContentPage x:Class="{Binding PageData.PageType, StringFormat='HabitatApp.Views.Pages.{0}'}"/>

			</page:CustomNavigationPage>
	    </DataTemplate>
  </TabbedPage.ItemTemplate>
</TabbedPage>
